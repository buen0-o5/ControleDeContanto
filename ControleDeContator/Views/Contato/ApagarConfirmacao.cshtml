@model ControleDeContator.Models.ContatoModel
@{
    ViewData["Title"] = "Confirmação para apagar o contato ";
}
<div class="text-center">
    <h5 class="display-4">Realmente deseja apagar o contato de "@Model.Nome" ?</h5>
</div>

    <a role="button" class="btn btn-primary btn-block" asp-controller="Contato" asp-action="Index">Não</a>
    <a role="button" class="btn btn-danger btn-block" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" >Sim</a>

