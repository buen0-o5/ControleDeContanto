@model ControleDeContator.Models.ContatoModel
@{
    ViewData["Title"] = "Adicionar contato";
}


    <h1 class="display-4">Cadastrar contato</h1>
    <form asp-controller="Contato" asp-action="Criar" method="post">
        <div class="mb-3">
            <label for="Nome" class="form-label">Nome</label>
            <input  asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome contato">
            <span class="text-danger"> @Html.ValidationMessageFor(x => x.Nome)</span>
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">E-mail</label>
            <input asp-for="Email" type="text" class="form-control" placeholder="Digite o e-mail contato">
            <span class="text-danger"> @Html.ValidationMessageFor(x => x.Email)</span>
        </div>

        <div class="mb-3">
            <label for="celular" class="form-label">Celular</label>
            <input asp-for="Celular" type="text" class="form-control" placeholder="Digite o celular contato">
            <span class="text-danger"> @Html.ValidationMessageFor(x => x.Celular)</span>
        </div>

        <button type="submit" class="btn btn-primary">Adicionar</button>
        <a asp-controller="Contato" asp-action="Index" class="btn btn-secondary"> Voltar</a>
    </form>


